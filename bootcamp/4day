  display: flex;
  gap: 15px;
  color: #888;
  font-size: 18px;
}

.icon {
  cursor: pointer;
}

/* 네비게이션 */
nav {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  background-color: #333;
  z-index: 1000;
}

nav ul {
  list-style-type: none;
  display: flex;
  justify-content: center;
  margin: 1%;
  padding: 0;
}

nav li {
  margin: 0;
}

nav a {
  display: block;
  padding: 15px 25px;
  color: white;
  text-decoration: none;
  font-weight: bold;
  transition: background 0.3s, color 0.3s;
}

nav a:hover {
  background-color: #555;
  color: #ffcc00;
}

/* 메인 컨텐츠 */
main {
  margin-top: 70px;
  padding: 20px;
}


